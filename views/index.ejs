<!DOCTYPE html>
<html>
  <% include partials/head.ejs %>
  <body>
    <% include partials/nav.ejs %>
    <div class="masonry">
        <% if (allPics) { %>
        <% for (var i=0; i< allPics.length; i++) { %>
          <div class="item">
            <a href="#" class="btn close" aria-hidden="true">&times;</a>
            <img class="mainImage" src="<%- allPics[i].link %>">
            <h5><%- allPics[i].description %></h5>
              <div>
                  <h5 style="float: left; margin: 0"><%- allPics[i].username %></h5>
                  <h5 style="float: right; margin: 0"><a href="#"><img class="heartImage" src="/img/heartEmpty.png"></a> <%- allPics[i].likes %></h5>
              </div>
          </div>
        <% } %>
        <% } %>
    </div>
    <% include partials/modal.ejs %>
    <% include partials/footer.ejs %>
  </body>

</html>
